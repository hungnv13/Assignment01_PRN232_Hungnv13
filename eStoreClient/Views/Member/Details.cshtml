@model BusinessObject.DTO.MemberDTO
@{
    ViewData["Title"] = "Member Details";
}

<div class="container mt-4">
    <h2 class="text-dark mb-4">@ViewData["Title"]</h2>
    <dl class="row">
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Company Name</dt>
        <dd class="col-sm-9">@Model.CompanyName</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">Country</dt>
        <dd class="col-sm-9">@Model.Country</dd>
    </dl>

    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
