@model BusinessObject.DTO.ProductDTO

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-info-circle-fill"></i> Product Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <div class="border rounded-3 shadow-sm p-4 bg-white text-dark">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Product Name</dt>
            <dd class="col-sm-8">@Model.ProductName</dd>

            <dt class="col-sm-4 fw-semibold">Category</dt>
            <dd class="col-sm-8">@Model.CategoryName</dd>

            <dt class="col-sm-4 fw-semibold">Weight</dt>
            <dd class="col-sm-8">@Model.Weight</dd>

            <dt class="col-sm-4 fw-semibold">Unit Price</dt>
            <dd class="col-sm-8">@Model.UnitPrice?.ToString("C")</dd>

            <dt class="col-sm-4 fw-semibold">Units In Stock</dt>
            <dd class="col-sm-8">@Model.UnitsInStock</dd>
        </dl>
    </div>
</div>
