@model BusinessObject.DTO.ProductDTO

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">Are you sure you want to delete this product?</h2>

    <div class="border p-4 rounded shadow-sm bg-white text-dark">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Product Name</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3 fw-bold">Category</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3 fw-bold">Price</dt>
            <dd class="col-sm-9">@Model.UnitPrice?.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Units In Stock</dt>
            <dd class="col-sm-9">@Model.UnitsInStock</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-outline-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </form>
</div>
