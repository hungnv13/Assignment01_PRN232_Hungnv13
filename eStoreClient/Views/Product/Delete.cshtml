@model BusinessObject.DTO.ProductDTO

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="text-danger fw-bold">
            <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
        </h2>
        <p class="text-muted">Are you sure you want to delete this product?</p>
    </div>

    <div class="border rounded-3 shadow-sm p-4 bg-white">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold text-dark">Product Name</dt>
            <dd class="col-sm-8">@Model.ProductName</dd>

            <dt class="col-sm-4 fw-semibold text-dark">Category</dt>
            <dd class="col-sm-8">@Model.CategoryName</dd>

            <dt class="col-sm-4 fw-semibold text-dark">Price</dt>
            <dd class="col-sm-8">@Model.UnitPrice?.ToString("C")</dd>

            <dt class="col-sm-4 fw-semibold text-dark">Units In Stock</dt>
            <dd class="col-sm-8">@Model.UnitsInStock</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4 d-flex gap-2">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger shadow-sm">
            <i class="bi bi-trash-fill"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </form>
</div>
