@model BusinessObject.DTO.CategoryDTO

<h2 class="mt-4 mb-4 text-danger">Confirm Delete</h2>

<div class="mb-3">
    <strong>Are you sure you want to delete this category?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Category Name</dt>
    <dd class="col-sm-10">@Model.CategoryName</dd>

</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
